# .htaccess file

# Enable rewrite engine
RewriteEngine On

# Set base directory if necessary
# RewriteBase /

# Don't rewrite files or directories that exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Route all other requests to the respective HTML files
RewriteRule ^auth/login/?$ auth/login.html [L]
RewriteRule ^auth/register/?$ auth/register.html [L]
RewriteRule ^auth/forgotPassword/?$ auth/forgotPassword.html [L]
RewriteRule ^auth/resetPassword/?$ auth/resetPassword.html [L]
RewriteRule ^auth/subscription/?$ auth/subscription.html [L]
RewriteRule ^dashboard/?$ dashboard.html [L]
RewriteRule ^legal/privacy/?$ legal/privacy.html [L]
RewriteRule ^legal/terms/?$ legal/terms.html [L]
RewriteRule ^superadmin/?$ superadmin.html [L]

# Handle the home page
RewriteRule ^$ index.html [L]

# Handle 404 errors
ErrorDocument 404 /404.html

# Add security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Enable CORS if needed
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>

# Cache control for static assets
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|woff2|ttf)$">
    Header set Cache-Control "max-age=31536000, public"
</FilesMatch>